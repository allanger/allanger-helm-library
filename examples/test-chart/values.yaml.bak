shortcuts:
  hostname: vaultwarden.company
  dataFolder: /app/data
  logFolder: /app/logs
  rocketPort: 8080

config:
  env:
    main:
      enabled: true 
      sensitive: false
      remove: []
      annotations: 
        test: test
      data:
        DOMAIN: '{{ .Values.shortcuts.hostname }}' 
        DATA_FOLDER: '{{ .Values.shortcuts.dataFolder }}'
        LOG_FILE: '{{ .Values.shortcuts.logsFolder }}/vaultwarden.log'
        ROCKET_PORT: '{{ .Values.shortcuts.rocketPort }}'
    secrets:
      enabled: true
      sensitive: true
      remove:
        - TO_REMOVE
      data: 
        DB_PASSWORD: secret
        TO_REMOVE: me
  files:
    cm:
      enabled: true
      sensitive: false
      entries:
        test.txt: 
          data: |-
            lala
    main:
      enabled: true
      sensitive: false
      remove: []
      annotations:
        test: test
      entries:
        something.txt:
          data: |-
            this is a simple txt file
        templated.txt:
          data: |-
            Welcome to {{ .Values.shortcuts.hostname }}
        converted.json:
          convertTo: json
          data: 
            item: value   
            list:
              - some
              - list
              - values
            map:
              of: strings
        converted.toml:
          convertTo: toml
          data: 
            item: value   
            list:
              - some
              - list
              - values
            map:
              of: strings
        converted.yaml:
          convertTo: yaml
          data: 
            item: value   
            list:
              - some
              - list
              - values
            map:
              of: strings
base:
  workload:
    annotations:
      helm.badhouseplants.net: '{{ .Release.Name }}'
    kind: Deployment
    strategy:
      type: RollingUpdate
    volumes:
      storage: {}
      files: {}
      raw: {}
    containers:
      vaultwarden:
        image:
          registry: registry.hub.docker.com
          repository: vaultwarden/server
          tag:
          pullPolicy: Always
        ports:
          main: vaultwarden
          raw:
            - containerPort: 4040
              protocol: TCP
        mounts:
          storage:
            data:
              path: /app/data/
          files:
            main:
              path: /test/files
            # logs:
              # path: /app/logs
        envFrom:
          - main
          - secrets
        livenessProbe:
          exec:
            command:
              - sh
              - /healthcheck.sh
        readinessProbe:
          exec:
            command:
              - sh
              - /healthcheck.sh
          initialDelaySeconds: 10
          periodSeconds: 10
  
  ingress:
    main:
      enabled: true
      class: traefik
      annotations:
        annotation: test
      rules:
        - hosts: vaultwarden.softplayer.net
          http:
            paths:
              - backend:
                  service:
                    name: '{{ include "chart.fullname" $ }}'
                    port: 8080
      tls:
        - hosts:
            - vaultwarden.softplayer.net
          secretName: vaultwarden.softplayer.net
  
  service:
    main:
      enabled: true
      type: ClusterIP
      ports:
        vaultwarden:
          port: 8080
          targetPort: 8080
          protocol: TCP
  
  storage:
    data:
      enabled: true
      storageClassName: default
      size: 1Gi
      accessModes:
        - ReadWriteMany
    logs:
      enabled: false
      storageClassName: default
      size: 1Gi
      accessModes:
        - ReadWriteMany
  
